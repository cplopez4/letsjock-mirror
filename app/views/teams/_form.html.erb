<%= form_for @team do |f| %>
    <fieldset>
      <legend>Team</legend>
      <%= f.text_field :name, :placeholder => "Name" %>
      <div class="input-prepend">
        <span class="add-on"><i class="icon-calendar"></i></span>
        <p><%=	 f.date_select :init %></p>
        <p><%=	 f.date_select :end %></p>
      </div>
      <div class="input-prepend">
        <span class="add-on"><i class="icon-user"></i></span>
        <p>COACH</p>
      </div>
      <label>Category</label>
      <div class="input-prepend">
        <span class="add-on"><i class="icon-star"></i></span>
        <%= f.select :category, [["U-16", 1], ["U-17", 2], ["U-18", 3], ["U-19", 4],["U-20", 5], ["Adult", 6]] %>
        <label class="checkbox">
          <input type="checkbox"> Currently playing here
        </label>
      </div>
      <%=	 f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :sport_id, :value => 1 %>
      <%= f.submit "Add team", :class => "btn" %>
    </fieldset>
<%  end %>

