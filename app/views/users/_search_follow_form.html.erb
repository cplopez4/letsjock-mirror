<% unless current_user?(user) %>
    <div id="follow_form">
      <% if current_user.following?(user) %>
          <%= render :partial => 'unfollow', :locals => {:user => user, :search => true} %>
      <% else %>
          <%= render :partial => 'follow', :locals => {:user => user, :search => true} %>
      <% end %>
    </div>
<% end %>