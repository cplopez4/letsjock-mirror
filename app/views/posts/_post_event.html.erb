<li>
  <a class="img-polaroid">
    <%= image_tag(@user.profilepic) %>
  </a>
  <div class="single-post">
    <h1 class="single-title"><%= @user.full_name%></h1>
    <p>Posted a new event <%= link_to event.name, event %> on <b><%= event.date.strftime("%B #{event.date.day.ordinalize}") %></b></p>
    <%= link_to event, :class => "img-rounded company-resume" do %>
      <%= image_tag(event.imageurl) %>
      <h4><%= event.name %></h4>
      <i class="icon-calendar"></i> <p><%= event.date.strftime("%A, %B #{event.date.day.ordinalize}, %Y") %></p>
      <i class="icon-time"></i> <p><%= event.date.strftime("%H:%M") %></p>
      <i class="icon-map-marker"></i> <p><%= event.place %></p>
    <% end %>
    <p>
      <small>
        <a href="#">Like <i class="icon-trophy icon-large icon-gray"></i></a>
        <%= time_ago_in_words(event.created_at) %> ago
      </small>
    </p>
    <!--comentarios-->
    <ul class="comments">
      <li class="view-more">
        <i class="icon-comments"></i>
        <p><small>Be the first to comment</small></p>
      </li>
      <% if signed_in? %>
      <li>
        <a class="img-rounded">
          <%= image_tag(current_user.profilephotourl, :title => current_user.full_name) %>
        </a>
        <div class="single-comment">
          <textarea class="input-block-level" rows="1" placeholder="Write a comment"></textarea>
        </div>
      </li>
      <% end %>
    </ul>
  </div><!--single-post-->
</li>