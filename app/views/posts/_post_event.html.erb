<li>
  <a class="img-polaroid">
    <%= image_tag(@user.profilepic) %>
  </a>
  <div class="single-post">
    <h1 class="single-title"><%= @user.full_name%></h1>
    <p>Posted a new event <%= link_to event.name, event %> on <b><%= event.date.strftime("%B #{event.date.day.ordinalize}") %></b></p>
    <%= link_to event, :class => "img-rounded company-resume" do %>
      <%= image_tag(event.imageurl) %>
      <h4><%= event.name %></h4>
      <i class="icon-calendar"></i> <p><%= event.date.strftime("%A, %B #{event.date.day.ordinalize}, %Y") %></p>
      <i class="icon-time"></i> <p><%= event.date.strftime("%H:%M") %></p>
      <i class="icon-map-marker"></i> <p><%= event.place %></p>
    <% end %>
    <p>
      <small>
        <%= render :partial => 'users/like', :locals => {:object => event} if signed_in? %>
        created <%= time_ago_in_words(event.created_at) %> ago
      </small>
    </p>
  </div><!--single-post-->
</li>