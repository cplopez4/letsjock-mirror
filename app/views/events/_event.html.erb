<td><%= image_tag User.find(event.user_id).profilephotourl, :class => "img-rounded" %></td>
<td>By <b><%= link_to User.find(event.user_id).full_name, User.find(event.user_id) %></b>
  <%=	 link_to event do %>
    <h4><%=	 event.name %></h4>
  <%  end %>
</td>

<td class="w-30"><%=  event.assistants.count %> Assistants
  <div class="assistants"><!--maximo 8 -->
    <%  event.assistants.take(8).each do |assistant| %>
        <%= link_to image_tag(assistant.profilephotourl) , assistant, :rel => "popover", :title => assistant.full_name, :data => {:toggle => "popover", :placement => "bottom", :content => assistant.followers.count.to_s + " Follower | " + assistant.followed_users.count.to_s + " Following", :trigger => "hover"} %>
    <%  end %>
  </div>
</td>
<td class="w-10"><p><%=  link_to event.date.strftime("%H:%M") %></p><%= link_to event.place %></td>