<% unless @team.id && @recognition.id && @competition.id && @train.id %>
    <ul class="experience" data-id="<%= user_sport.sport_id %>" data-type="user_sport">
      <li><h5><i class="icon-user icon-large"></i>Sport <span><%= Sport.find(user_sport.sport_id).full_name %></span></h5></li>
      <li class="calendar"><i class="icon-calendar"></i><%= user_sport.init.strftime("%B %Y") %>, to <%= user_sport.end.strftime("%B %Y") %></li>
    </ul>
<% end %>