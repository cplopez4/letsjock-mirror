<% messages = current_user.messages_with(User.find(user_id)).sort_by(&:created_at) %>
<% messages.each do |message| %>
    <% if message.user_id == user_id %>
        <div id="mensajes-left"><%=	 message.content %></div>
    <% else %>
        <div id="mensajes-right"><%= message.content %></div>
    <% end %>
<% end %>

