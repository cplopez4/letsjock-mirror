<% unless train.team_id %>
    <ul class="experience">
      <li><h5>Trained by <% if User.find(train.trainer_id) %><%= link_to User.find(train.trainer_id).full_name, User.find(train.trainer_id) %><% else %><%= train.name %><% end %>  <span><%= Sport.find(train.sport_id).name %></span></h5></li>
      <li class="calendar"><i class="icon-calendar"></i><%= train.init.strftime("%m/%Y") %>, to <%= train.end.strftime("%m/%Y") %></li>
      <% if signed_in? && current_user.id == train.user_id %>
          <%= link_to "Delete", train, method: :delete%>
      <%  end %>
    </ul>
<% end %>